#!/usr/bin/env bash

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

###############################################################################
# Node + NPM                                                                  #
###############################################################################

# Install latest Node.js
curl "https://nodejs.org/dist/v10.16.3/node-v10.16.3.pkg" > "$HOME/Downloads/node-v10.16.3.pkg" && sudo installer -store -pkg "$HOME/Downloads/node-v10.16.3.pkg" -target "/" && rm "$HOME/Downloads/node-v10.16.3.pkg"

# Update NPM
sudo npm install npm@latest -g

# Install global NPM packages
sudo npm install svgo@latest -g
sudo npm install npm-check@latest -g
